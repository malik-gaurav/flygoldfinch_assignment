<h1 style="text-align:center;"> Home Page Counter</h1>
<hr>
<div class="container" style="text-align:center;">
	<h2>
		<span id="display" style="color:blue">0</span>
	</h2>
	<div>
		<button id="dec" type="button" class="btn btn-danger">-</button>
		<button id="inc" type="button" class="btn btn-success">+</button>	
	</div>
</div>
<script>
var nbutton = document.querySelector("#dec");
var pbutton = document.getElementById("inc");
var display = document.querySelector("#display");
var score=0;
nbutton.addEventListener("click", function(){
	score--;
	display.textContent = score;
});
pbutton.addEventListener("click", function(){
	score++;
	display.textContent = score;
});
</script>

